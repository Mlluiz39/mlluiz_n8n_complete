# =========================================
# N8N PRODUÇÃO - CLOUDFLARE TUNNEL
# =========================================

# URL pública oficial do n8n
N8N_HOST=n8n.mlluizdevtech.com.br
N8N_PROTOCOL=https
N8N_PORT=5678

# Webhooks precisam ser HTTPS público
WEBHOOK_URL=https://n8n.mlluizdevtech.com.br

# Editor também precisa apontar para o domínio público
N8N_EDITOR_BASE_URL=https://n8n.mlluizdevtech.com.br

# Timezone
TZ=America/Sao_Paulo

# =========================================
# SEGURANÇA
# =========================================

# Obrigatório definir uma chave segura
N8N_ENCRYPTION_KEY=coloque_uma_chave_grande_aqui_123456789

# Login no painel
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=senha_forte_aqui

# =========================================
# TELEGRAM (importante)
# =========================================

# Permite registrar webhook corretamente
N8N_DISABLE_PRODUCTION_MAIN_PROCESS=false

